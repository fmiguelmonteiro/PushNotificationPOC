<?xml version="1.0"?>
<configuration>

  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>
  <system.serviceModel>
    <services>
      <service behaviorConfiguration="PushNotificationService.PushNotificationServiceBehavior"
        name="PushNotificationService.PushNotificationService">
        <endpoint address="" behaviorConfiguration="web" binding="webHttpBinding"
          contract="PushNotificationService.IPushNotificationService" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
          <behavior name="PushNotificationService.PushNotificationServiceBehavior">
            <serviceMetadata httpGetEnabled="false" />
            <serviceDebug includeExceptionDetailInFaults="false" />
          </behavior>
        </serviceBehaviors>
        <endpointBehaviors>
          <behavior name="web">
            <webHttp/>
          </behavior>
        </endpointBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
 <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>
  
</configuration>
