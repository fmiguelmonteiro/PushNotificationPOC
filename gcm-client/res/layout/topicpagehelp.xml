<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/LinearLayoutTopicPageHelp"
      android:layout_width="match_parent"
      android:layout_height="518dp"
      android:orientation="vertical" >
      
    <TextView
            android:id="@+id/textViewTopicPageHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="8dip"
            android:text="Help"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>
        
    <TextView
            android:id="@+id/textViewTopicPageHelpInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="8dip"
            android:text="In this page you can select any topic to see it's current feed. \nGo to the menu to add a new topic!">
        </TextView>
        
 </LinearLayout>